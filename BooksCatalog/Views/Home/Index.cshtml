@model IEnumerable<BooksCatalog.Models.Book>

<h1></h1>

<div ng-app="booksCatalogApp">
    <div ng-controller="BookListCtrl">
        <div style="margin: 0 0 0 20px">
            <span>Search: </span>
            <input type="text" name="search" ng-model="query"/>
        </div>
        <table style="width: 100%">
            <tr>
                <td>Name</td>
                <td>Author</td>
                <td>Genre</td>
            </tr>
            <tr ng-repeat="book in books.$values | filter: query | orderBy: name">
                <td>{{book.name}}</td>
                <td>{{book.author.firstName}} {{book.author.lastName}}</td>
                <td>{{book.genre.name}}</td>
            </tr>
        </table>
        <span>Add new book</span>
        <table>
            <tr>
                <td>Author</td>
                <td>
                    <select ng-model="newBook.authorId">
                        <option ng-repeat="author in authors.$values" value="{{author.id}}">
                            {{author.firstName}} {{author.lastName}}
                        </option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Genre</td>
                <td>
                    <select ng-model="newBook.genreId">
                        <option ng-repeat="genre in genres.$values" value="{{genre.id}}">{{genre.name}}</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td>Name</td>
                <td>
                    <input type="text" name="name" ng-model="newBook.name" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="button" value="Add new" ng-click="save()"/>
                </td>
            </tr>
        </table>
    </div>
</div>
@Scripts.Render("~/Scripts/angular.js")
@Scripts.Render("~/Scripts/app/app.js")
@Scripts.Render("~/Scripts/app/filters.js")
@Scripts.Render("~/Scripts/app/controllers/controllers.js")
@Scripts.Render("~/Scripts/app/services/services.js")