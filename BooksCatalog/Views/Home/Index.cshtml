@model IEnumerable<BooksCatalog.Models.Book>

<h1></h1>

<table>
    <tr>
        <td>Name</td>
        <td>Author</td>
        <td>Genre</td>
    </tr>
    @foreach (var book in Model)
    {
        <tr>
            <td>@Html.DisplayFor(i => book.Name)</td>
            <td>@Html.DisplayFor(i => book.Author.FullName)</td>
            <td>@Html.DisplayFor(i => book.Genre.Name)</td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = book.Id })
            </td>
        </tr>
    }
</table>

<div>
    <span>Add new book</span>
    <table>
        <tr>
            <td>Author</td>
            <td>
                <select name=""></select>
            </td>
        </tr>
        <tr>
            <td>Genre</td>
            <td>
                <select name=""></select>
            </td>
        </tr>
        <tr>
            <td>Name</td>
            <td>
                <input/>
            </td>
        </tr>
    </table>
</div>