@model IEnumerable<BooksCatalog.Models.Book>

<h1></h1>

<div ng-app="booksCatalogApp">
    <div ng-controller="BookListCtrl">
        {{title}}
        <table>
            <tr>
                <td>Name</td>
                <td>Author</td>
                <td>Genre</td>
            </tr>
            <tr ng-repeat="book in books.$values">
                <td>{{book.name}}</td>
                <td>{{book.author.firstName}}</td>
                <td>{{book.genre.name}}</td>
            </tr>
        </table>
    </div>
</div>

